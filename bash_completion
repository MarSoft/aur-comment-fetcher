# aur-comment-fetch bash completion

_aur-comment-fetch_pkg()
{
python << EOF
import AUR
for x in AUR.RPC.aur_query("search","$1")[0]:
    print(x["Name"])
EOF

}

_aur-comment-fetch() 
{
	local cur prev words cword
	_init_completion || return

	case $prev in
		-h|--help)
			return
			;;
	esac

	COMPREPLY=( $(compgen -W '--help --all -n $(_aur-comment-fetch_pkg "${cur}" 2>/dev/null)' -- "${cur}") )
}

complete -F _aur-comment-fetch aur-comment-fetch

